- var sectionTitle = data.connect.sectionTitle
include ../section-title/section-title

.column(span="row")
  .connect__avatar
.column(span="row" height="10")

each social, key in data.connect.socialList
  input.connect__radio(
    type="radio"
    name="connect__label"
    id=`connect__label--${key}`
  )
  .column(span="1")
    label(for=`connect__label--${key}`).connect__disc
      i(class=`icon__${social.icon}`)

.column(span="row" height="10")
.column(span="row")
  .description-box__with-arrow
    .description-box__header
      .description-box__title hhdh
      .description-box__close
        input.connect__radio(
          type="radio"
          name="connect__label"
          id=`connect__label--reset`
        )
        label(for=`connect__label--reset`).connect__disc
          i(class=`icon__cross`)
    .description-box__body
      p.description-box__paragraph Lorem ipsum dolor sit amet consectetur adipisicing elit. Enim quo labore libero beatae deserunt ab. Quae ad tenetur obcaecati labore est iure veniam ratione, suscipit explicabo magni a inventore temporibus.
    .description-box__footer
      button.button__pill--blue
        i.icon__link
        span.button-text=data['about-me'].downloadButtonLabel

.column(span="row" height="10")
.column(span="row")
  button.button__disc--green
    i.icon__arrow-down
.column(span="row" height="10")
